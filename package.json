{
  "name": "simple-web-service",
  "version": "0.1.0",
  "description": "A simple web service.",
  "main": "index.ts",
  "scripts": {
    "start": "node ./build/index.js",
    "start:local": "TS_NODE_PROJECT=tsconfig.build.json TS_NODE_FILES=true ts-node index.ts",
    "clean": "rimraf build/",
    "build": "npm run clean && tsc --project tsconfig.build.json",
    "lint": "eslint . --ext .ts",
    "test": "TS_NODE_PROJECT=tsconfig.json TS_NODE_FILES=true mocha --config ./tests/.mocharc.json ./tests/{integration,unit}/**/*.test.ts"
  },
  "author": "Roger Madjos <roger@hov.co>",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.2.19",
    "@types/chance": "^1.1.2",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.12.4",
    "@types/sinon": "^10.0.2",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "chai": "^4.3.4",
    "chance": "^1.1.7",
    "eslint": "^7.29.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.23.4",
    "mocha": "^9.0.1",
    "rimraf": "^3.0.2",
    "sinon": "^11.1.1",
    "supertest": "^6.1.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4"
  }
}
